{
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "es2020": true,
    "node": true,
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "16.13.1"
    }
  },
  "rules": {
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "react/display-name": 1,
    "react/react-in-jsx-scope": 1,
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^(props|next)$"
    }]
  }
}
